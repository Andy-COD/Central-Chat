<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="20dp"
            android:id="@+id/friendLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opo_msg_back"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:textColor="#424242"
                android:textSize="18sp"
                android:text="@string/friend_placeholder"
                android:id="@+id/friendMessage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeStamp_placeholder"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:id="@+id/friendMessageTime"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/friendLayout"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_msg_back"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:textColor="#424242"
                android:textSize="18sp"
                android:text="@string/friend_placeholder"
                android:id="@+id/myMessage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeStamp_placeholder"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:id="@+id/myMessageTime"
                android:layout_gravity="end"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>